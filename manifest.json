{
  "manifest_version": 2,

  "name": "CodeCopy",
  "description": "This extension allows code block copying",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["clipboard.js", "codeblocks.js"],
      "css": ["clipboard.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "img/copy.svg",
    "img/copied.svg"
  ]
}
