{
  "manifest_version": 2,

  "name": "CodeCopy",
  "description": "This extension  allows code block selecting",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["clipboard.js", "codeblocks.js"],
      "css": ["button.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["copy.png", "copied.svg"]
}
